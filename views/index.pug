extends layout

block content

    .container

        .col-12.text-center.mt-5
            h1.mb-3.display-4 Sniplary
            p Search by words in your snippet description, separate multiple search criteria with a space

        form#searchSnippet
            input.form-control#searchCriteria(type='text', placeholder='ie. express async route try catch')
        ul.snippetsList
        #results.mt-1
        form.mt-3(action='api/snippet/addSnippet', method='post')
            .form-group
                label(for='snippetDescription') Write the description for your snippet. Snippets are searched by this description.
                textarea.form-control#snippetDescription(name='description', placeholder='ie. Async express post route with a try/catch block and basic error handling')
            
            .form-group
                label(for='snippet') Paste or write your snippet below
                code
                    textarea.form-control#snippet(name='snippet')
            button.btn.btn-success.mt-3(type='submit') Send
        
        .snippetsContainer
